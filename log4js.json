{
  "appenders": {
    "server": { 
      "type": "dateFile", 
      "filename" : "var/log/fairpost.log", 
      "compress": true,
      "numBackups" : 7
    },
    "server-filtered": {
      "type": "logLevelFilter",
      "level": "info",
      "appender": "server"
    },
    "user": { 
      "type": "dateFile", 
      "filename" : "users/%user%/var/log/fairpost.log", 
      "compress": true,
      "numBackups" : 7
    }
  },
  "categories": {
    "default": { "appenders": ["user", "server-filtered"], "level": "info" }
  }
}