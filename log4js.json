{
  "appenders": {
    "global": { 
      "type": "dateFile", 
      "filename" : "var/log/fairpost.log", 
      "compress": true,
      "numBackups" : 7
    },
    "global-filtered": {
      "type": "logLevelFilter",
      "level": "info",
      "appender": "global"
    },
    "user": { 
      "type": "dateFile", 
      "filename" : "users/%user%/fairpost.log", 
      "compress": true,
      "numBackups" : 7
    }
  },
  "categories": {
    "default": { "appenders": ["global"], "level": "info" },
    "user": { "appenders": ["user","global-filtered"], "level": "info" }
  }
}